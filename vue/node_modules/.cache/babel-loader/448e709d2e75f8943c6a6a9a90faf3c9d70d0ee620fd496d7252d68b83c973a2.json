m in menus\" :key=\"item.path\" @click=\"$router.push(item.path)\">{{ item.text }}</div>\r\n                </div>\r\n            </div>\r\n            <div style=\"width: 300px\">\r\n                <el-input prefix-icon=\"el-icon-search\" size=\"medium\" placeholder=\"请输入新闻关键字搜索\" style=\"width: 220px; margin-right: 5px\"></el-input>\r\n                <el-button size=\"medium\">搜索</el-button>\r\n            </div>\r\n            <div class=\"front-header-right\">\r\n                <div v-if=\"!user.username\">\r\n                    <el-button @click=\"$router.push('/login')\">登录</el-button>\r\n                    <el-button @click=\"$router.push('/register')\">注册</el-button>\r\n                </div>\r\n                <div v-else>\r\n                    <el-dropdown>\r\n                        <div class=\"front-header-dropdown\">\r\n                            <img :src=\"user.avatar\" alt=\"\">\r\n                            <div style=\"margin-left: 10px\">\r\n                                <span>{{ user.name }}</span><i class=\"el-icon-arrow-down\" style=\"margin-left: 5px\"></i>\r\n                            </div>\r\n                        </div>\r\n                        <el-dropdown-menu slot=\"dropdown\">\r\n                            <el-dropdown-item>\r\n                                <div @click=\"$router.push('/front/person')\">个人信息</div>\r\n                            </el-dropdown-item>\r\n                            <el-dropdown-item>\r\n                                <div @click=\"logout\">退出登录</div>\r\n                            </el-dropdown-item>\r\n                        </el-dropdown-menu>\r\n                    </el-dropdown>\r\n                </div>\r\n            </div>\r\n        </div>\r\n        <!--主体-->\r\n        <div class=\"main-body\">\r\n            <router-view ref=\"child\" @update:user=\"updateUser\" />\r\n        </div>\r\n    </div>\r\n    </div>\r\n</template>\r\n\r\n<script>\r\n\r\nexport default {\r\n    nam